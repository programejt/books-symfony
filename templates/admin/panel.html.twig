{% extends 'base.html.twig' %}

{% block title %}{{ 'admin_panel'|trans }}{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('styles/form.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
  <h1 class="h2 text-center">{{ 'admin_panel'|trans }}</h1>
  <h2 class="h3 text-center">{{ 'change.user_role'|trans }}</h2>

  {{ form_start(form, {
    'attr': {
      'id': 'admin-panel-form',
      'class': 'container content-container'
    }
  }) }}
    {{ include('forms/global_errors.html.twig') }}
    {{ include('forms/field.html.twig', {
      'field': form.user
    }) }}
    {{ include('forms/field.html.twig', {
      'field': form.role
    }) }}
    {{ form_rest(form) }}
    {{ include('forms/form_buttons.html.twig', {
      'submitButtonLabel': 'Update',
      'cancelButtonHref': path('app_user_my_account')
    }) }}
  {{ form_end(form) }}
{% endblock %}
