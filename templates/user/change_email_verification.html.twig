{% extends 'base.html.twig' %}

{% block title %}{{ 'confirm_email_change'|trans }}{% endblock %}

{% block body %}
  <article class="container content-container">
    <h1 class="text-center">{{ 'confirm_email_change'|trans }}</h1>

    <div class="container section">
      <p class="text-center">{{ 'confirm_email_change_message'|trans }}.</p>
      <p class="text-center">{{ 'new_email_message'|trans }}: <strong>{{ app.user.newEmail }}</strong>.</p>
      <p class="text-center">{{ 'send_email_again_message'|trans }}.</p>

      <form method="post" class="text-center">
        <input type="hidden" name="_token" value="{{ csrf_token('resend_email') }}">
        <button type="submit" class="btn btn-primary">{{ 'send_confirmation_email'|trans }}</button>
      </form>
    </div>

    <div class="container section">
      <p class="text-center">{{ 'cancel_email_change_message'|trans }}.</p>

      <form action="{{ path('app_user_cancel_email_change') }}" method="post" class="text-center">
        <input type="hidden" name="_token" value="{{ csrf_token('cancel_email_change') }}">
        <button type="submit" class="btn btn-danger">{{ 'cancel_email_change'|trans }}</button>
      </form>
    </div>
  </article>
{% endblock %}