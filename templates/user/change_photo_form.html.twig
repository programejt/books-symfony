{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}
  {{ include('user/header.html.twig', {
    'user': app.user
  }) }}
  <h2 class="h3 text-center mb-3">Change photo</h2>
  {{ form_start(form, {
    'attr': {
      'class': 'container content-container'
    }
  }) }}
    <div class="errors">
      {% for error in form.vars.errors %}
        <div class="alert alert-danger">{{ error.getMessage() }}</div>
      {% endfor %}
    </div>
    {% if photo %}
      <div class="user-image-container mb-3">
        <img src="{{ asset(photo) }}" alt="photo" class="img">
      </div>
      {{ include('forms/field.html.twig', {
        'field': form.deletePhoto,
        'attr': {
          'class': 'form-check-input'
        }
      }) }}
    {% endif %}
    {{ include('forms/field.html.twig', {
      'field': form.photo
    }) }}
    {{ form_rest(form) }}
    <div class="text-center">
      <button class="btn btn-primary form-button">{{ button_label|default('Save') }}</button>
    </div>
  {{ form_end(form) }}
{% endblock %}
