{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link href="{{ asset('styles/form.css') }}" rel="stylesheet">
{% endblock %}

{% block title %}{{ 'log_in'|trans }}{% endblock %}

{% block body %}
  <form method="post" class="container content-container">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h2 mb-3 font-weight-normal text-center">{{ 'log_in'|trans }}</h1>
    <div class="mb-3">
      <label for="username">{{ 'email'|trans }}</label>
      <input type="email" value="{{ lastUsername }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
    </div>

    <div class="mb-3">
      <label for="password">{{ 'password'|trans }}</label>
      <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>

    <div class="checkbox mb-3">
      <label for="_remember_me">{{ 'remember_me'|trans }}</label>
      <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
    </div>

    <div class="form-buttons">
      <button class="btn btn-lg btn-primary form-button" type="submit">
        {{ 'log_in'|trans }}
      </button>
    </div>
  </form>
{% endblock %}
