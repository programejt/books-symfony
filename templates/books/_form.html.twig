{% block stylesheets %}
  <link href="{{ asset('styles/form.css') }}" rel="stylesheet">
{% endblock %}

{{ form_start(form, {
  'attr': {
    'id': 'form',
    'class': 'container content-container'
  }
}) }}
  <div class="errors">
    {% for error in form.vars.errors %}
      <div class="alert alert-danger">{{ error.getMessage() }}</div>
    {% endfor %}
  </div>
  {% if book.photo %}
    <div class="text-center mb-3">
      <img src="{{ asset(book.getPhotosDir()~'/'~book.photo) }}" alt="photo" class="img">
    </div>
    {{ include('forms/field.html.twig', {
      'field': form.deletePhoto,
      'attr': {
        'class': 'form-check-input'
      }
    }) }}
  {% endif %}
  {{ include('forms/field.html.twig', {
    'field': form.photo
  }) }}
  {{ include('forms/field.html.twig', {
    'field': form.title
  }) }}
  {{ include('forms/select_multiple.html.twig', {
    'field': form.authors
  }) }}
  {{ include('forms/field.html.twig', {
    'field': form.year
  }) }}
  {{ include('forms/field.html.twig', {
    'field': form.isbn
  }) }}
  {{ include('forms/field.html.twig', {
    'field': form.description,
    'attr': {
      'rows': 6
    }
  }) }}
  {% do form.authors.setRendered() %}
  {{ form_rest(form) }}
  {{ include('forms/form_buttons.html.twig') }}
{{ form_end(form) }}
