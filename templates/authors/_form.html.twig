{% block stylesheets %}
  <link href="{{ asset('styles/form.css') }}" rel="stylesheet">
{% endblock %}

{{ form_start(form, {
  'attr': {
    'id': 'author-form',
    'class': 'container content-container'
  }
}) }}
  <div class="errors">
    {% for error in form.vars.errors %}
      <div class="alert alert-danger">{{ error.getMessage() }}</div>
    {% endfor %}
  </div>
  {{ include('forms/field.html.twig', {
    'field': form.name
  }) }}
  {{ include('forms/field.html.twig', {
    'field': form.surname
  }) }}
  {{ form_rest(form) }}
  {{ include('forms/form_buttons.html.twig') }}
{{ form_end(form) }}
