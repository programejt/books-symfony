{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
  <h1 class="h2 text-center">Authors</h1>

  {% if is_granted(enum('App\\Enum\\UserRole').Moderator.value) %}
    <div class="text-center my-4">
      <a href="{{ path('app_authors_new') }}" class="btn btn-success">Add new</a>
    </div>
  {% endif %}

  <div class="container-fluid">
    <div class="row gap-3 justify-content-center">
      {% for author in authors %}
        <div class="card col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card-body">
            <a href="{{ path('app_authors_show', { id: author.id }) }}" class="d-block h5 card-title text-center btn card-main-link">{{ author }}</a>
            <p class="card-text text-muted">{{ author.books.count() }} book(s)</p>
          </div>
        </div>
      {% else %}
        <div class="text-center">No authors found</div>
      {% endfor %}
    </div>
  </div>

  {{ include('pagination.html.twig', {
    currentPage: currentPage,
    pagesCount: pagesCount,
    prevUrl: path('app_authors_index', {
      page: currentPage - 1,
      search: searchValue,
    }),
    nextUrl: path('app_authors_index', {
      page: currentPage + 1,
      search: searchValue,
    }),
  }) }}
{% endblock %}
