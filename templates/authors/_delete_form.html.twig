<form method="post" action="{{ path('app_authors_delete', {'id': author.id}) }}" onsubmit="return confirm('{{ 'confirm_delete_author_message'|trans }}');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
  <button type="submit" class="btn btn-danger">{{ 'delete'|trans }}</button>
</form>
